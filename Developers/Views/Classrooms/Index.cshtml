@{
    ViewData["Title"] = "Sesiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h2>Sesiones</h2>
                    <div>
                        <a class="btn btn-primary" asp-controller="Classrooms" asp-action="Create">
                            <i class="bi bi-plus-square"></i> Nuevo
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-striped" id="table_classrooms">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Curso</th>
                                <th>Instructor</th>
                                <th>Fecha</th>
                                <th>Duración</th>
                                <th>Estado</th>
                                <th width="120px">Opciones</th>
                            </tr>
                        </thead>
                        @* Body con datatables *@
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/classroom.js"></script>
}